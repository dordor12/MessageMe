<%= render 'layouts/logo' %>

  <div class="ui two column grid">
    <div class="twelve wide column">
      <div class="ui fluid raised card chatbox">
        <div id="messages" class="content">
          <div id="message-container" class="ui feed">
            <%= render @messages%>
        </div>
        </div>
        <div class="extra content">
          <%= form_for(@message, html: { class: "ui reply form", role: "form"}, url: message_path, remote: true) do |f| %>
                <div class="field">
                    <div class="ui fluid labeled icon input">
                        <%= f.text_field :body %>
                        <%= f.button '<i class="icon paper plane"></i>'.html_safe %>
                    </div>
                </div>
            <% end %>
          </div>
      </div>
    </div>
  
    <div class="four wide column">
      <div class="ui fluid raised card chatbox">
        <div class="content">
          <div class="ui inverted vertical menu">
            <a class="item">
              Home
            </a>
            <a class="item">
              Messages
            </a>
            <a class="item">
              Friends
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>